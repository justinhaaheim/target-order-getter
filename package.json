{
  "name": "target-order-getter",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engineStrict": true,
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "build": "tsc && vite build",
    "clean:build": "rm -rf build/",
    "clean:node-modules": "rm -rf node_modules/",
    "dev": "vite",
    "lint:fix": "npm run lint --fix",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier-check": "prettier --check .",
    "prettier": "prettier --write .",
    "preview": "vite preview",
    "signal:serial": "npm run ts-check && npm run lint && npm run prettier-check",
    "signal": "concurrently --names \"TS,LINT,PRETTIER\" -c \"bgBlack.bold,bgRed.bold,bgCyan.bold\" \"npm run ts-check\" \"npm run lint\" \"npm run prettier-check\"",
    "ts-check": "tsc --noEmit",
    "ts-check-masked": "npm run ts-check",
    "login": "op run --env-file .env.local -- playwright test",
    "test": "playwright test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.11",
    "@mui/material": "^5.14.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "4.17.0"
  },
  "devDependencies": {
    "@playwright/test": "1.46.1",
    "@types/node": "^22.1.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "8.2.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "playwright": "1.46.1",
    "prettier": "3.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "lint-staged": {
    "**/*": "prettier --check --ignore-unknown",
    "*.(js|jsx|cjs|ts|tsx)": [
      "eslint --cache --max-warnings=0"
    ]
  }
}
